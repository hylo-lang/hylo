//- compileAndRun expecting: success

extension Int {

  public property negated: Int {
    let { -self }
    inout {
      var x = -self
      yield &x
      &self = -x
    }
  }

}

public fun main() {
  var x = 5
  inout y = &x
  &y = y + 1
  precondition(x == 6)

  inout z = &x.negated
  &z = z + 1
  precondition(x == 5)
  precondition(x.negated == -5)
}

public extension CLong {
    public init(_ n: UInt8) {
        &self = CLong(value: Builtin.tocint_u_i8_clong(n.value))
    }

    public init(_ n: Int8) {
        &self = CLong(value: Builtin.tocint_s_i8_clong(n.value))
    }

    public init(_ n: UInt32) {
        &self = CLong(value: Builtin.tocint_u_i32_clong(n.value))
    }

    public init(_ n: Int32) {
        &self = CLong(value: Builtin.tocint_s_i32_clong(n.value))
    }

    public init(_ n: UInt64) {
        // assert (n <= UInt64(self.max()))
        &self = CLong(value: Builtin.tocint_u_i64_clong(n.value))
    }

    public init(_ n: Int64) {
        // assert (n >= Int64(self.min()) && n <= Int64(self.max()))
        &self = CLong(value: Builtin.tocint_s_i64_clong(n.value))
    }

    public init(_ n: UInt) {
        // assert (n <= UInt(self.max()))
        &self = CLong(value: Builtin.tocint_u_word_clong(n.value))
    }

    public init(_ n: Int) {
        // assert (n >= Int(self.min()) && n <= Int(self.max()))
        &self = CLong(value: Builtin.tocint_s_word_clong(n.value))
    }
}
public extension Int8 {
    public init(truncating_or_extending n: CLong) {
        // assert(n >= Int8.min() && n <= Int8.max())
        &self = Int8(value: Builtin.fromcint_clong_i8(n.value))
    }
}
public extension UInt8 {
    public init(truncating_or_extending n: CLong) {
        // assert(n >= 0 && n <= UInt8.max())
        &self = UInt8(value: Builtin.fromcint_clong_i8(n.value))
    }
}

public extension CChar {
    public init(_ n: UInt8) {
        // if self.signed { assert (n <= UInt8(self.max())) }
        &self = CChar(value: Builtin.tocint_u_i8_cchar(n.value))
    }

    public init(_ n: Int8) {
        // Platform-dependent: if CChar is unsigned and n < 0, this would cause undefined behavior
        // assert(n >= Int8(self.min()))
        &self = CChar(value: Builtin.tocint_s_i8_cchar(n.value))
    }

    public init(_ n: UInt32) {
        // assert (n <= UInt32(self.max()))
        &self = CChar(value: Builtin.tocint_u_i32_cchar(n.value))
    }

    public init(_ n: Int32) {
        // assert (n >= Int32(self.min()) && n <= Int32(self.max()))
        &self = CChar(value: Builtin.tocint_s_i32_cchar(n.value))
    }

    public init(_ n: UInt64) {
        // assert (n <= UInt64(self.max()))
        &self = CChar(value: Builtin.tocint_u_i64_cchar(n.value))
    }

    public init(_ n: Int64) {
        // assert (n >= Int64(self.min()) && n <= Int64(self.max()))
        &self = CChar(value: Builtin.tocint_s_i64_cchar(n.value))
    }

    public init(_ n: UInt) {
        // assert (n <= UInt(self.max()))
        &self = CChar(value: Builtin.tocint_u_word_cchar(n.value))
    }

    public init(_ n: Int) {
        // assert (n >= Int(self.min()) && n <= Int(self.max()))
        &self = CChar(value: Builtin.tocint_s_word_cchar(n.value))
    }
}


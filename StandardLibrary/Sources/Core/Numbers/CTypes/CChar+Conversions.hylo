public extension Int8 {
    /// Precondition: `n` is in the range of `Int8`.
    public init (_: CChar) {
        // assert(n >= Int8.min() && n <= Int8.max())
        &self = Int8(value: Builtin.fromcint_cchar_i8(0))
    }

    public init(truncating_or_extending n: CChar) {
        &self = Int8(value: Builtin.fromcint_cchar_i8(n.value)) // no assertion
    }
}

public extension UInt8 {
    /// Precondition: `n` is in the range of `UInt8`.
    public init (_: CChar) {
        // assert(n >= 0 && n <= UInt8.max())
        &self = UInt8(value: Builtin.fromcint_cchar_i8(0))
    }
    
    public init(truncating_or_extending n: CChar) {
        &self = UInt8(value: Builtin.fromcint_cchar_i8(n.value))
    }
}

